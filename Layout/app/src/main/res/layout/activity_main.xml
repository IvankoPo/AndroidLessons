<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/mainImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/ID_ADDITS"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mainImage"
            android:layout_alignTop="@+id/mainImage"
            android:textSize="20sp"
            android:text="ID ADDITS"/>
        <ImageView
            android:id="@+id/smallImage"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/ID_ADDITS"
            android:layout_alignStart="@+id/ID_ADDITS"
            android:layout_alignBottom="@+id/mainImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You: Photo Message"
            android:layout_toRightOf="@+id/smallImage"
            android:layout_alignTop="@+id/smallImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday"
            android:layout_toRightOf="@+id/ID_ADDITS"
            android:layout_alignTop="@+id/ID_ADDITS"/>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Button"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <Button
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/SendEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Email"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>